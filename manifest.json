{
  "name": "colourSpy",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "Easily view CSS colours used on a website.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": ["src/bg/background.js"],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "js": ["js/jquery/jquery.min.js", "content.js"]
  }],
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "colourSpy",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "clipboardWrite",
    "contextMenus",
    "tabs",
    "*://*/*"
  ]
}